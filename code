    }
    /* Reset & basic styling */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      background: linear-gradient(45deg, var(--background-start), var(--background-end));
      min-height: 100vh;
      display: flex;
      flex-direction: column;
